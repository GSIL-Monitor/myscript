<% if @error %>
<div id='error_explanation'> <%= @error%>
</div>
<% end %>

<%= javascript_tag "window.onload = builder_onload" %>

<h1 style="text-align:center">svn merge web</h1>
<form method="post" id="vmlinux" action="/merge/new">
	<label>分支类型</label><br>
	<%= params[:types] = "add" unless params[:type]; nil %>
	<%= radio_button_tag "types", "add", params[:types] == "add" %>合并主干&nbsp;&nbsp;
	<%#= radio_button_tag "types", "del", params[:types] == "del" %>&nbsp;&nbsp;
	<%= radio_button_tag "types", "dt", params[:types] == "dt" %>主干版本回退&nbsp;&nbsp;
	<%= radio_button_tag "types", "db", params[:types] == "db" %>分支版本回退&nbsp;&nbsp;<br><br>

	<label>项目主干路径:</label><br>
	<%= url_field_tag "trunk", params[:trunk],:class =>"test" %><br>

	<label>分支名称:</label><br>
	<%= text_area_tag "branch", params[:branch],:class =>"test"  %><br>

	<label>合并工单:</label><br>
	<%= url_field_tag "task", params[:task],:class =>"test1" %><br>

	<label>版本名称:</label><br>
	<%= text_area_tag "rev", params[:rev],:class =>"test1" %><br>

	<label>创建完成后发送通知邮件人员名单(公司邮箱，以空格分隔，可不填)</label><br>
	<%= text_area_tag "extra_mails", params[:extra_mails],:class =>"test1" %><br>
	 <input type="submit" value="Submit">
	 <input name="authenticity_token"
	 	type="hidden"
		value="<%= form_authenticity_token %>"/>
